{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Current Test File",
        "type": "go",
        "request": "launch",
        "mode": "test",
        "program": "${fileDirname}",
        "args": [
          "-test.run",
          "."
        ]
      },
      {
        "name": "Debug All Tests in Package",
        "type": "go",
        "request": "launch",
        "mode": "test",
        "program": "${fileDirname}",
        "args": [
          "-test.run",
          "Test" // Matches all test functions
        ]
      },
      {
        "name": "Debug Specific Test",
        "type": "go",
        "request": "launch",
        "mode": "test",
        "program": "${fileDirname}",
        "args": [
          "-test.run",
          "${selectedText}"
        ]
      },
      {
        "name": "Debug Specific System Test",
        "type": "go",
        "request": "launch",
        "mode": "test",
        "program": "${fileDirname}",
        "buildFlags": "-tags=system_test",
        "args": [
          "-test.run",
          "${selectedText}"
        ]
      },      
      {
        "name": "Launch Package",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${fileDirname}"
      },
      {
        "name": "Debug lumerad",
        "type": "go",
        "request": "launch",
        "mode": "exec",
        "program": "${workspaceFolder}/build/lumerad",
        "args": ["start"],
        "preLaunchTask": "Ignite Debug Build"
      },
    {
      "name": "Run lumerad testnet init-files",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}/build/lumerad",
      "args": [
        "testnet",
        "init-files",
        "--chain-id=testing",
        "--output-dir=./testnet",
        "--v=4",
        "--keyring-backend=test",
        "--commit-timeout=900ms",
        "--minimum-gas-prices=0.000001stake",
        "--starting-ip-address",
        "--single-host",
        "--disable-cleanup"
      ],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "Ignite Debug Build"
    },
    {
      "name": "Attach to lumerad process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": "${command:pickProcess}",
      "showLog": true
    },
    {
      "name": "Attach to Delve",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "port": 40000,
      "host": "127.0.0.1",
      "apiVersion": 2,
      "trace": "verbose"
    }        
    ]
  }