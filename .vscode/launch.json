{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Current Test File",
        "type": "go",
        "request": "launch",
        "mode": "test",
        "program": "${fileDirname}",
        "args": [
          "-test.run",
          "."
        ]
      },
      {
        "name": "Debug All Tests in Package",
        "type": "go",
        "request": "launch",
        "mode": "test",
        "program": "${fileDirname}",
        "args": [
          "-test.run",
          "Test" // Matches all test functions
        ]
      },
      {
        "name": "Debug Specific Test",
        "type": "go",
        "request": "launch",
        "mode": "test",
        "program": "${fileDirname}",
        "args": [
          "-test.run",
          "${selectedText}"
        ]
      },
      {
        "name": "Debug Specific System Test",
        "type": "go",
        "request": "launch",
        "mode": "test",
        "program": "${fileDirname}",
        "buildFlags": "-tags=system_test",
        "args": [
          "-test.run",
          "${selectedText}"
        ]
      },      
      {
        "name": "Launch Package",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${fileDirname}"
      },
      {
        "name": "Debug lumerad",
        "type": "go",
        "request": "launch",
        "mode": "exec",
        "program": "${workspaceFolder}/build/lumerad",
        "args": ["start"],
        "preLaunchTask": "Ignite Debug Build"
      }
    ]
  }