{
    "go.useLanguageServer": true,
    "go.toolsManagement.autoUpdate": true,
    "go.formatTool": "gofmt",
    "go.vetOnSave": "package",
    "go.testOnSave": false,
    "go.coverOnSave": false,
    "protoc": {
        "path": "protoc",
        "compile_on_save": false,
        "options": [
            "--proto_path=${workspaceFolder}/proto",
            "--proto_path=${env:HOME}/.cache/buf/v1"
        ]
    }
}