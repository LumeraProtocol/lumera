{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ignite Chain Build",
      "type": "shell",
      "command": "ignite chain build",
      "group": "build",
      "problemMatcher": [
        {
          "owner": "go",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^(.*\\.go):(\\d+):\\d+: (.*)$",
            "file": 1,
            "line": 2,
            "message": 3
          }
        }
      ]
    },
		{
			"label": "Ignite Debug Build",
			"type": "shell",
			"command": "ignite",
			"args": [
				"chain",
				"build",
				"--debug",
				"-v",
				"--output",
				"${workspaceFolder}/build",
			],
			"problemMatcher": [
        {
          "owner": "go",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^(.*\\.go):(\\d+):\\d+: (.*)$",
            "file": 1,
            "line": 2,
            "message": 3
          }
        }
			],
			"group": {
				"kind": "build",
				"isDefault": true
			  },
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
		},
    {
      "label": "Copy lumerad to ~/go/bin",
      "type": "shell",
      "command": "cp",
      "args": [
        "-f",  // force overwrite
        "${workspaceFolder}/build/lumerad",
        "${env:HOME}/go/bin/lumerad"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
