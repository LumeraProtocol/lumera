{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Ignite Debug Build",
			"type": "shell",
			"command": "ignite",
			"args": [
				"chain",
				"build",
				"--debug",
				"-v",
				"--output",
				"${workspaceFolder}/build",
			],
			"problemMatcher": [
				"$go"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			  },
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
		}
	]
}